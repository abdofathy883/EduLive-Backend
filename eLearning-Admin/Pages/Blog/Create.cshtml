@page
@model eLearning_Admin.Pages.Blog.CreateModel

@{
    ViewData["Title"] = "Create";
}
<h1>اضافة مقال جديد</h1>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label class="form-label">العنوان</label>
        <input asp-for="Blog.Title" class="form-control" />
        <span asp-validation-for="Blog.Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">المحتوى</label>
        <textarea asp-for="Blog.Content" class="form-control"></textarea>
        <span asp-validation-for="Blog.Content" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">الصورة</label>
        <input type="file" asp-for="Blog.PostImage" class="form-control" />
        <span asp-validation-for="Blog.PostImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

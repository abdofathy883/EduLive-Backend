@page
@model eLearning_Admin.Pages.Category.CreateModel

@{
ViewData["Title"] = "Create";
}

<h1>اضافة تصنيف جديد</h1>
    <hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label class="form-label">العنوان</label>
        <input asp-for="Category.Title" class="form-control" />
        <span asp-validation-for="Category.Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">الوصف</label>
        <input asp-for="Category.Description" class="form-control" />
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">الصورة</label>
        <input type="file" asp-for="Category.Image" class="form-control" />
        <span asp-validation-for="Category.Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

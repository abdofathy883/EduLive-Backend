@page
@model eLearning_Admin.Pages.Courses.CreateModel

@{
ViewData["Title"] = "Create";
}

<h1>اضافة دورة تعليمية جديدة</h1>
    <hr />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col">
    <div class="form-group">
        <label class="form-label">العنوان</label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>

        </div>
        <div class="col">
    <div class="form-group">
                <label class="form-label">عدد الحصص</label>
        <input asp-for="Course.NuOfLessons" class="form-control" />
        <span asp-validation-for="Course.NuOfLessons" class="text-danger"></span>
    </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
    <div class="form-group">
                <label class="form-label">الوصف</label>
        <textarea asp-for="Course.Description" class="form-control"></textarea>
        <span asp-validation-for="Course.Description" class="text-danger"></span>
    </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
    <div class="form-group">
                <label class="form-label">السعر الاصلي</label>
        <input asp-for="Course.OriginalPrice" class="form-control" />
        <span asp-validation-for="Course.OriginalPrice" class="text-danger"></span>
    </div>

        </div>
        <div class="col">
    <div class="form-group">
                <label class="form-label">السعر بعد التخفيض</label>
        <input asp-for="Course.SalePrice" class="form-control" />
        <span asp-validation-for="Course.SalePrice" class="text-danger"></span>
    </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
    <div class="form-group">
                <label class="form-label">الصورة</label>
        <input asp-for="Course.CourseImage" type="file" class="form-control" />
        <span asp-validation-for="Course.CourseImage" class="text-danger"></span>
    </div>

        </div>
        <div class="col">
    <div class="form-group">
                <label class="form-label">التصنيف</label>
        <select asp-for="Course.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
    <div class="form-group">
                <label class="form-label">المعلم</label>
        <select asp-for="Course.InstructorId" class ="form-control" asp-items="ViewBag.InstructorId"></select>
    </div>

        </div>
        <div class="col">
    <div class="form-group">
                <label class="form-label">الشهادة</label>
        <input asp-for="Course.CertificateTemplatePath" class="form-control" />
        <span asp-validation-for="Course.CertificateTemplatePath" class="text-danger"></span>
    </div>

        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

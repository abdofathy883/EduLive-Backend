@page
@model eLearning_Admin.Pages.LessonReports.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LessonReport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LessonReport.Id" />
            <div class="form-group">
                
                <label asp-for="LessonReport.MemorizedContent" class="control-label"></label>
                <input asp-for="LessonReport.MemorizedContent" class="form-control" />
                <span asp-validation-for="LessonReport.MemorizedContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="LessonReport.ExplainedTopics" class="control-label"></label>
                <input asp-for="LessonReport.ExplainedTopics" class="form-control" />
                <span asp-validation-for="LessonReport.ExplainedTopics" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="LessonReport.DiscussedValues" class="control-label"></label>
                <input asp-for="LessonReport.DiscussedValues" class="form-control" />
                <span asp-validation-for="LessonReport.DiscussedValues" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="LessonReport.StudentId" class="control-label"></label>
                <select asp-for="LessonReport.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="LessonReport.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="LessonReport.InstructorId" class="control-label"></label>
                <select asp-for="LessonReport.InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
                <span asp-validation-for="LessonReport.InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LessonReport.IsDeleted" /> @Html.DisplayNameFor(model => model.LessonReport.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

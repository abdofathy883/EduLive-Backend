@page
@model eLearning_Admin.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>جميع عمليات الدفع</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].InstructorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Payment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
